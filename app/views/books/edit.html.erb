<h1>Editer le livre</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@book) do |f| %>
        <p><%= f.label :titre %> :</p>
        <%= f.text_field :titre, class: 'form-control' %>

        <p><%= f.label :auteur %> :</p>
        <%= f.text_field :auteur, class: 'form-control' %>

        <p><%= f.label :borrowed_by %> :</p>
        <%= f.text_field :borrowed_by, class: 'form-control' %>

        <%= f.submit "Confirmer", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>