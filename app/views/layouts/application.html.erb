<!DOCTYPE html>
<html>
  <head>
    <title><%= @titre %></title>
    <link href="//netdna.bootstrapcdn.com/bootstrap/<%= bootstrap_version %>/css/bootstrap.min.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
  <div class="container">
    <header>
      <nav>
        <ul>
          <li><%= link_to "Accueil", root_path %></li>
          <% if signed_in? %>
              <li><%= link_to "Profil", edit_user_path(current_user) %></li>
          <% end %>
          <li><%= link_to "Utilisateurs", users_path %></li>
          <li><%= link_to "Bibliothèque", '/books' %></li>
          <li><%= link_to "Ajouter un livre", "books/new" %></li>
          <% if signed_in? %>
            <li><%= link_to "Déconnexion", signout_path %></li>
          <% else %>
            <li><%= link_to "S'identifier", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </header>


    <div class="container">
      <section>
        <% flash.each do |key, value| %>
            <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
    </div>

    <script src="//netdna.bootstrapcdn.com/bootstrap/<%= bootstrap_version %>/js/bootstrap.min.js"></script>
    <%= debug(params) if Rails.env.development? %>
  </div>

  </body>
</html>
